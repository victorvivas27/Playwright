{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "Node",
        "allowJs": true,
        "checkJs": false,
        "baseUrl": "./",
        "paths": {
            "@pages/*": [
                "pages/*"
            ],
            "@tests/*": [
                "tests/*"
            ],
            "@support/*": [
                "support/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}